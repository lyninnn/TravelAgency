<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>

<AnchorPane prefHeight="220.0" prefWidth="365.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.travelagency.Controllers.ViajeCon">

    <!-- Etiqueta y campo para la ciudad -->
    <Label layoutX="20.0" layoutY="20.0" text="Ciudad:" />
    <TextField fx:id="txtCiudad" layoutX="100.0" layoutY="20.0" prefWidth="200.0" />

    <!-- Etiqueta y campo para el país -->
    <Label layoutX="20.0" layoutY="60.0" text="País:" />
    <TextField fx:id="txtPais" layoutX="100.0" layoutY="60.0" prefWidth="200.0" />

    <!-- Etiqueta y campo para el precio -->
    <Label layoutX="20.0" layoutY="100.0" text="Precio:" />
    <TextField fx:id="txtPrecio" layoutX="100.0" layoutY="100.0" prefWidth="200.0" />

    <!-- Botón Aceptar -->
    <Button fx:id="Aceptar" layoutX="100.0" layoutY="160.0" onAction="#agregarViaje" text="Aceptar" />

    <!-- Botón Cancelar -->
    <Button fx:id="Cancelar" layoutX="200.0" layoutY="160.0" onAction="#volver" text="Cancelar" />

</AnchorPane>
