<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.travelagency.Controllers.ClienteCon" spacing="10" alignment="CENTER">
    <Label text="GestiÃ³n de Clientes" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TableView fx:id="tableClientes" prefHeight="200" prefWidth="600">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50" />
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="100" />
            <TableColumn fx:id="colNacionalidad" text="Nacionalidad" prefWidth="100" />
            <TableColumn fx:id="colFechaRegistro" text="Fecha Registro" prefWidth="120" />
            <TableColumn fx:id="colViaje" text="Viaje" prefWidth="150" />
        </columns>
    </TableView>
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="txtNombre" promptText="Nombre" />
        <TextField fx:id="txtNacionalidad" promptText="Nacionalidad" />
        <ComboBox fx:id="cbViaje" promptText="Seleccionar Viaje" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnAgregar" text="Agregar" onAction="#agregarCliente" />
        <Button fx:id="btnActualizar" text="Actualizar" onAction="#actualizarCliente" />
        <Button fx:id="btnEliminar" text="Eliminar" onAction="#eliminarCliente" />
    </HBox>
</VBox>

