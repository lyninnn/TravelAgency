<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="220.0" prefWidth="365.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.travelagency.Controllers.ClienteCon">

        <Label layoutX="20.0" layoutY="20.0" text="Nombre:" />
        <TextField fx:id="txtNombre" layoutX="100.0" layoutY="20.0" prefWidth="200.0" />

        <!-- Etiqueta y campo para la nacionalidad -->
        <Label layoutX="20.0" layoutY="60.0" text="Nacionalidad:" />
        <TextField fx:id="txtNacionalidad" layoutX="100.0" layoutY="60.0" prefWidth="200.0" />

        <!-- Etiqueta y ComboBox para el viaje -->
        <Label layoutX="20.0" layoutY="100.0" text="Viaje:" />
        <ComboBox fx:id="cbViaje" layoutX="100.0" layoutY="100.0"  prefWidth="200.0" />

        <!-- Botón Aceptar -->
        <Button fx:id="Aceptar" layoutX="100.0" layoutY="160.0" onAction="#agregarCliente" text="Aceptar" />

        <!-- Botón Cancelar -->
        <Button fx:id="Cancelar" layoutX="200.0" layoutY="160.0" onAction="#volver" text="Cancelar" />

</AnchorPane>
